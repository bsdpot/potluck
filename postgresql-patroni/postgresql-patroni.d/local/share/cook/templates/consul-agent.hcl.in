datacenter = "%%datacenter%%"
node_name = "%%nodename%%"
data_dir =  "/var/db/consul"
dns_config = {
  a_record_limit = 3
  enable_truncate = true
}
tls = {
  defaults = {
    verify_incoming = true
    verify_outgoing = true
    ca_file = "/mnt/consulcerts/ca_root.crt"
    cert_file = "/mnt/consulcerts/agent.crt"
    key_file = "/mnt/consulcerts/agent.key"
  }

  internal_rpc = {
    verify_incoming = true
    verify_server_hostname = true
  }
}
log_file = "/mnt/log/consul/consul.log"
log_level = "WARN"
encrypt = "%%gossipkey%%"
enable_agent_tls_for_checks = true
retry_join = [ %%consulservers%% ]
services = {
  name = "node-exporter"
  tags = ["_app=postgresql", "_service=node-exporter",
          "_hostname=%%nodename%%.%%datacenter%%.consul"]
  port = 9100
}
services = {
  name = "postgres-exporter"
  tags = ["_app=postgresql", "_service=postgres-exporter",
          "_hostname=%%nodename%%.%%datacenter%%.consul",
          "_datacenter=%%datacenter%%"]
  port = 9187
}
telemetry = {
  prometheus_retention_time = "24h"
}
acl = {
  enabled = true
  default_policy = "deny"
  enable_token_persistence = true
}
