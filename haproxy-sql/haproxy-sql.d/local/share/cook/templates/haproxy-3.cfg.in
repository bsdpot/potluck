global
  daemon
  user www
  group www
  maxconn 4096
  stats socket /var/run/haproxy/socket mode 600 level admin expose-fd listeners

defaults
  log global
  option tcplog
  option dontlognull
  option redispatch
  option socket-stats
  timeout connect 10000ms
  timeout client 100000ms
  timeout server 100000ms
  retries 3

listen sqlloadbalancer
  bind %%ip%%:3306
  mode tcp
  balance leastconn
  option tcpka
  option tcplog
  option mysql-check user haproxy
  server db1 %%serverone%%:3306 check
  server db2 %%servertwo%%:3306 check
  server db3 %%serverthree%%:3306 check
