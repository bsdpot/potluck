APP_NAME="%%appname%%"
APP_ENV="production"
APP_KEY="base64:%%myappkey%%"
APP_DEBUG="false"
IMAGE_DRIVER="imagick"

# Instance Configuration
OPEN_REGISTRATION="true"
ENFORCE_EMAIL_VERIFICATION="true"
PF_MAX_USERS="1000"
OAUTH_ENABLED="true"
ENABLE_CONFIG_CACHE="true"
ENABLE_COVID_LABEL="false"

# Media Configuration
PF_OPTIMIZE_IMAGES="true"
IMAGE_QUALITY="80"
MAX_PHOTO_SIZE="15000"
MAX_CAPTION_LENGTH="500"
MAX_ALBUM_LENGTH="4"
# new
MEDIA_REMOTE_STORE_CLOUD="true"
MEDIA_DELETE_LOCAL_AFTER_CLOUD="true"
PF_LOCAL_AVATAR_TO_CLOUD="true"
#MEDIA_HLS_ENABLED="true"
#MEDIA_HLS_P2P="true"
#MEDIA_HLS_P2P_ICE_SERVER="stun:stun.l.google.com:19302"

# Instance URL Configuration
APP_URL="https://%%domain%%"
APP_DOMAIN="%%domain%%"
ADMIN_DOMAIN="%%domain%%"
SESSION_DOMAIN="%%domain%%"
TRUST_PROXIES="*"

# Database Configuration
DB_CONNECTION="pgsql"
DB_HOST="%%dbhost%%"
DB_PORT="%%dbport%%"
DB_DATABASE="%%dbname%%"
DB_USERNAME="%%dbuser%%"
DB_PASSWORD="%%dbpass%%"

# Redis Configuration
REDIS_CLIENT="predis"
REDIS_SCHEME="tcp"
REDIS_HOST="%%redishost%%"
REDIS_PASSWORD="%%redispass%%"
REDIS_PORT="%%redisport%%"

# Laravel Configuration
SESSION_DRIVER="database"
CACHE_DRIVER="redis"
QUEUE_DRIVER="redis"
BROADCAST_DRIVER="log"
LOG_CHANNEL="stack"
HORIZON_PREFIX="horizon-"

# ActivityPub Configuration
ACTIVITY_PUB="true"
AP_REMOTE_FOLLOW="true"
AP_INBOX="true"
AP_OUTBOX="true"
AP_SHAREDINBOX="false"

# Experimental Configuration
EXP_EMC="true"

## Mail Configuration (Post-Installer)
MAIL_DRIVER=smtp
MAIL_HOST=%%mailhost%%
MAIL_PORT=%%mailport%%
MAIL_USERNAME="%%mailuser%%"
MAIL_PASSWORD="%%mailpass%%"
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="%%mailfromaddress%%"
MAIL_FROM_NAME="Pixelfed"

## S3 Configuration (Post-Installer)
PF_ENABLE_CLOUD=true
FILESYSTEM_CLOUD=s3
AWS_ACCESS_KEY_ID="%%s3user%%"
AWS_SECRET_ACCESS_KEY="%%s3pass%%"
AWS_DEFAULT_REGION="%%s3region%%"
AWS_BUCKET="%%s3bucket%%"
AWS_URL="%%s3url%%/%%s3bucket%%/"
AWS_ENDPOINT="%%s3endpoint%%"
AWS_USE_PATH_STYLE_ENDPOINT=false
