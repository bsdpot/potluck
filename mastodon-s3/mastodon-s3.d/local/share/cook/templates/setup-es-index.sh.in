#!/bin/sh

set -e
# shellcheck disable=SC3040
set -o pipefail

export PATH=/usr/local/bin:$PATH

# Check for root privileges
if ! [ "$(id -u)" = 0 ]; then
   echo "This script must be run with root privileges"
   exit 1
fi

# change directory to tmp for su purposes
cd /tmp || exit 1

# as user mastodon run tootctl to rebuild elasticsearch indexes
echo "Using tootctl to create elasticsearch indexes"
su - mastodon -c '/usr/local/bin/bash -c "cd /usr/local/www/mastodon; RAILS_ENV=production SAFETY_ASSURED=1 bin/tootctl search deploy"'
