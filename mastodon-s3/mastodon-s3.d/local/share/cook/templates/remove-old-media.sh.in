#!/bin/sh

set -e
# shellcheck disable=SC3040
set -o pipefail

export PATH=/usr/local/bin:$PATH

# Check for root privileges
if ! [ "$(id -u)" = 0 ]; then
   echo "This script must be run with root privileges"
   exit 1
fi

# change directory to tmp for su purposes
cd /tmp || exit 1

# tootctl media remove
echo "Removing media"
su - mastodon -c '/usr/local/bin/bash -c "cd /usr/local/www/mastodon; RAILS_ENV=production bin/tootctl media remove"'
echo ""

# tootctl preview_cards remove
echo "Removing preview_cards"
su - mastodon -c '/usr/local/bin/bash -c "cd /usr/local/www/mastodon; RAILS_ENV=production bin/tootctl preview_cards remove"'
echo ""
